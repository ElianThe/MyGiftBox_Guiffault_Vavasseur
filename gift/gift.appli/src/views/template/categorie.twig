{% extends "_layout/main.twig" %}


{% block content %}

    <div class="categories-page">
        <div class="header-content">
            <h1>Vous voilà sur la catégorie : {{ categorie.libelle }}</h1>
            <a class="btn-primary" href="{{ url_for('prestationsFromCategorie', {'categ_id' : categorie.id}) }}">Voir les prestations liées à la
                catégorie</a>
        </div>

        <h2 class="sous-titre"> Ici vous pourrez retrouver : </h2>
        <p class="categorie-description"> {{ categorie.description }}</p>

        <div class="go-back-button-div">
            <a class="go-back-button" href="{{ url_for('categories') }}">Retour à la liste des catégories</a>
        </div>



        {# <a href="{{ url_for('deleteCategorie', {'categ_id' : categorie.id}) }}">Supprimer la catégorie</a> #}
    </div>

{% endblock %}